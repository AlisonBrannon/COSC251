        //Question 1:
        System.out.println ("*********      ***        *          *");
        System.out.println ("*       *    *     *     ***        * *");
        System.out.println ("*       *   *       *   *****      *   *");
        System.out.println ("*       *.  *       *     *       *     *");
        System.out.println ("*       *   *       *     *      *       *");
        System.out.println ("*       *   *       *     *       *     *");
        System.out.println ("*       *   *       *     *        *   *");
        System.out.println ("*       *    *     *      *         * *");
        System.out.println ("*********      ***        *          *");

        //Question 2:
        System.out.println("Enter an Integer.");
        int a = 0;
        int b = 0;
        int c = 0;
        a = b * c;
        //This program performs a simple payroll action

        //Question 3:
        int one = 0;
        int two = 0;
        int sum = 0;
        int product = 0;
        int difference = 0;
        int quotient = 0;

        Scanner userInput = new Scanner (System.in);

        System.out.println("Enter Integer One: ");
        one = userInput.nextInt();
        System.out.println("Enter Integer Two: ");
        two = userInput.nextInt();

        sum = one + two;
        product = one * two;
        difference = one - two;
        quotient = one / two;

        System.out.println("The sum is: " + sum);
        System.out.println("The product is: " + product);
        System.out.println("The difference is: " + difference);
        System.out.println("The quotient is: " + quotient);

    }
}
